{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "version": 2,
    "final_space": true,
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "path",
                    "style": "powerline",
                    "powerline_symbol": "",
                    "foreground": "#cba6f7",
                    "background": "#1e1e2e",
                    "properties": {
                        "style": "full"
                    }
                },
                {
                    "type": "git",
                    "style": "powerline",
                    "powerline_symbol": "",
                    "foreground": "#a6e3a1",
                    "background": "#1e1e2e",
                    "properties": {
                        "branch_icon": " ",
                        "fetch_status": true,
                        "fetch_upstream_icon": true
                    }
                }
            ]
        }
    ]
}