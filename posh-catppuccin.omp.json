{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "blue": "#8aadf4",
    "green": "#a6da95",
    "mauve": "#c6a0f6",
    "peach": "#f5a97f",
    "pink": "#f5bde6",
    "red": "#ed8796",
    "sapphire": "#7dc4e4",
    "teal": "#8bd5ca",
    "yellow": "#eed49f"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "session",
          "template": "{{ if .SSHSession }}\ueb39{{ end }}{{ if .Root }}\uf511{{ end }}",
          "foreground": "p:teal",
          "style": "plain"
        },
        {
          "type": "shell",
          "properties": {
            "mapped_shell_names": {
              "bash": "\uebca",
              "cmd": "\ueb4c",
              "fish": "\uee41",
              "powershell": "\uebc7",
              "pwsh": "\uebc7",
              "zsh": "\udb83\udc36\ue760"
            }
          },
          "foreground": "p:teal",
          "style": "plain"
        },
        {
          "type": "os",
          "template": "{{ if .WSL }}[WSL @ {{ .Icon }}]{{ end }}",
          "foreground": "p:sapphire",
          "style": "plain"
        },
        {
          "type": "session",
          "template": "[{{ .UserName }}@{{ .HostName }}]",
          "foreground": "p:teal",
          "style": "plain"
        },
        {
          "type": "spotify",
          "properties": {
            "playing_icon": "\uf1bc"
          },
          "template": "[{{ if ne .Status \"stopped\" }}{{ .Icon }} {{ .Track }} ~ {{ .Artist }}{{ end }}]",
          "foreground": "p:green",
          "style": "plain"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "time",
          "properties": {
            "time_format": "15:04:05"
          },
          "template": "[{{ .CurrentDate | date .Format }}]",
          "foreground": "p:peach",
          "style": "plain"
        },
        {
          "type": "battery",
          "properties": {
            "charged_icon": "\udb80\udc84",
            "charging_icon": "\udb80\udc89",
            "discharging_icon": "\udb80\udc7c",
            "not_charging_icon": "\udb81\udea5"
          },
          "template": "{{ if not .Error }}[{{ .Icon }} {{ .Percentage }}%]{{ end }}",
          "foreground": "p:yellow",
          "style": "plain"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "path",
          "properties": {
            "folder_separator_icon": "/",
            "style": "full"
          },
          "template": "[{{ .Path }}]",
          "foreground": "p:mauve",
          "style": "plain"
        },
        {
          "type": "git",
          "template": "[{{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }}]",
          "foreground": "p:pink",
          "style": "plain"
        }
      ],
      "newline": true
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "node",
          "properties": {
            "fetch_package_manager": true
          },
          "template": "[\ued0d{{ if not .Error }}{{ if .PackageManagerIcon }} {{ .PackageManagerIcon }}{{ end }} {{ .Full }}{{ end }}]",
          "foreground": "p:green",
          "style": "plain"
        },
        {
          "type": "python",
          "properties": {
            "display_mode": "context"
          },
          "template": "[\udb80\udf20{{ if not .Error }}{{ if .Venv }} ({{ .Venv }}){{ end }} {{ .Full }}{{ end }}]",
          "foreground": "p:sapphire",
          "style": "plain"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "template": "<b>\udb80\udd3e</b> ",
          "foreground": "p:blue",
          "style": "plain"
        }
      ],
      "newline": true
    }
  ],
  "transient_prompt": {
    "foreground_templates": [
      "{{ if gt .Code 0 }}p:red{{ else }}p:green{{ end }}"
    ],
    "template": "\udb80\udd3e\u2800",
    "background": "transparent"
  },
  "secondary_prompt": {
    "template": "\udb80\udd3e",
    "foreground": "p:blue",
    "background": "transparent"
  },

  "upgrade": {
    "auto": true,
    "source": "cdn",
    "interval": "168h"
  },
  "version": 3
}
